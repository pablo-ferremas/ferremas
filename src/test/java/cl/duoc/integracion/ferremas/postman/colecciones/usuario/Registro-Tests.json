  "item": [
    {
      "name": "01. Registro - Datos Válidos",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"nombre\": \"{{test_nombre}}\",\n  \"email\": \"{{test_email}}\",\n  \"password\": \"{{test_password}}\",\n  \"rol\": \"CLIENTE\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/{{api_version}}/usuarios/registro",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "{{api_version}}",
            "usuarios",
            "registro"
          ]
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "// Verificar código de estado",
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "// Verificar que la respuesta sea JSON válido",
              "pm.test(\"Response is valid JSON\", function () {",
              "    const response = pm.response.json();",
              "    pm.expect(response).to.be.an('object');",
              "});",
              "",
              "// Verificar tiempo de respuesta",
              "pm.test(\"Response time is less than 5000ms\", function () {",
              "    pm.expect(pm.response.responseTime).to.be.below(5000);",
              "});",
              "",
              "// Verificar headers de respuesta",
              "pm.test(\"Response has correct headers\", function () {",
              "    pm.expect(pm.response.headers.get('Content-Type')).to.include('application/json');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
