spring.application.name=ferremas

server.port=8090
spring.datasource.url=jdbc:mysql://localhost:3306/ferremas
spring.datasource.username=ferremas
spring.datasource.password=123456
# spring.datasource.password=D431d400bc4++
spring.jpa.hibernate.ddl-auto=update
spring.jpa.defer-datasource-initialization=true
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.MySQL8Dialect

spring.security.csrf.enabled=false

# Configuración para servir recursos estáticos correctamente
spring.web.resources.static-locations=classpath:/static/
spring.web.resources.add-mappings=true

# Usar la estrategia de mapeo legacy para soportar patrones complejos
spring.mvc.pathmatch.matching-strategy=ant_path_matcher

